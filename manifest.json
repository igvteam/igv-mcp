{
  "manifest_version": "0.1",
  "name": "igv-mcp",
  "version": "1.0.0",
  "description": "Control IGV (Integrative Genomics Viewer) via Model Context Protocol",
  "author": {
    "name": "Thorin Tabor"
  },
  "server": {
    "type": "node",
    "entry_point": "src/mcp.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/src/mcp.js",
        "--host",
        "127.0.0.1:60151"
      ]
    }
  }
}